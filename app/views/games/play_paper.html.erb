<link rel="stylesheet" href="/assets/css/bootstrap.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<body>
  <div class="container">
    <hr>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-12">
        <div class="btn-group btn-group-justified">
          <a class="btn btn-block btn-primary" href="/rock"> Play Rock </a>
          <a class="btn btn-block btn-info" href="/paper"> Play Paper </a>
          <a class="btn btn-block btn-primary" href="/scissors"> Play Scissors </a>
        </div>
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-md-4 col-md-offset-2 col-xs-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title text-center"> Paper </h2>
          </div>
          <div class="panel-body text-center">
            <i class="fa fa-hand-paper-o fa-5x" aria-hidden="true"></i>


          </div>
        </div>
      </div>

      <div class="col-md-4 col-xs-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title text-center">   <%=computer_move=["Rock", "Paper", "Scissors"].sample%> </h2>
          </div>
          <div class="panel-body text-center">
            <% if computer_move=="Paper"%>
            <i class="fa move-icon fa-hand-paper-o fa-5x"></i>

            <% elsif computer_move=="Rock"%>
            <i class="fa fa-hand-rock-o fa-5x" aria-hidden="true"></i>

            <% else%>
            <i class="fa fa-hand-scissors-o fa-5x" aria-hidden="true"></i>
            <%end%>


          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <div class="well text-center">

          <h1>
            <% if computer_move=="Rock"%>
            <span class="label label-success"> You won! </span>

            <%elsif computer_move=="Paper" %>
            <span class="label label-warning"> You tied! </span>

            <%else %>
            <span class="label label-danger"> You lose! </span>
            <%end%>
            </%end%>
          </h1>
        </div>
      </div>
    </div>





  </div>
</body>
